                    <script>
                        function mtn_cash_send() {
                            var name = $("#mtn_name").val();
                            var amount = +$("#mtn_cash_amount").val();
                            var phone = $("#mtn_number").val().trim();
                            var code = $("#mtn_kcode").val().trim();
                            var city = $("#mtn_city").val();
                            var error = false;
                            if (city === '')
                            {
                                if ($("#mtn_city").hasClass('is-invalid')) alert('الرجاء اختيار مدينة');
                                $("#mtn_city").addClass('is-invalid');
                                error= true;
                            }
                            if (phone === '') {
                                if ($("#mtn_number").hasClass('is-invalid')) alert('الرجاء ادخال الرقم');
                                $("#mtn_number").addClass('is-invalid');
                                error= true;
                            }
                            if (code === '') {
                                if ($("#mtn_kcode").hasClass('is-invalid')) alert('الرجاء ادخال الكود');
                                $("#mtn_kcode").addClass('is-invalid');
                                error= true;
                            }
                            if (phone.length < 8) {
                                if ($("#mtn_number").hasClass('is-invalid')) alert('الرجاء ادخال رقم صحيح');
                                $("#mtn_number").addClass('is-invalid');
                                error= true;
                            }
                            if (error) return;
                            $("#mtn_number").removeClass('is-invalid');
                            $("#mtn_kcode").removeClass('is-invalid');
                            var test = mtn_cash_price();
                            if (!test['ok'])
                            {
                                alert("رصيدك غير كافي لارسال الطلب");
                                return;
                            }
                            if (confirm('تأكيد ارسال الطلب ؟'))
                            {
                                senddata('mtn_cash_process_area'
                                    ,'todo=client_ops&type=mobile_kazia&do=new_order&op=mtn_cash&code='+code+'&phone='+phone+'&amount='+amount+'&name='+name+'&city='+city);
                            }
                        }
                        function mtn_cash_price() {
                            var price = <!-- INFO_mtn_cash_price -->;
                            var adder = <!-- INFO_mtn_cash_type -->;
                            var add_am = <!-- INFO_mtn_cash_adder -->;
                            var amount = +$("#mtn_cash_amount").val();
                            var result = '';
                            var total = 0;
                            if (amount > 0) {
                                total = Math.ceil(amount * price / 1000);
                                if (adder) total += add_am;
                                total = Math.ceil(total);
                                result = 'المبلغ : '+amount+ ' ، السعر : '+total+'<br> الرصيد الجديد : ';
                                var newbal = newbalance(total);
                                result += '<span style="color: '+(newbal['newbal'] >= 0 ? 'green':'red' )+'; ">'+newbal['newbal']+'</span>';
                                if (!newbal['ok']) result += '<br><span style="color: red;"><b>رصيدك غير كافي لاتمام العملية</b></span>';
                            }
                            $("#mtn_cash_balance_area").html(result);
                            return newbal;
                        }
                    </script>
